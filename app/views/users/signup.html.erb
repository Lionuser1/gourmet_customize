<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<p><%= flash[:alert] %></p>
			<form class="form-signin "action="/users/signup_complete" method="post">
			<h3 class="text-center form-signin-heading">회원가입하기</h3>
				<p class="text-center"><input class="form-control input_user"placeholder="아이디"type="text" name="username"></p>
				<p class="text-center"><input class="form-control input_user"placeholder="비밀번호" type="password" name="password"></p>
				<p class="text-center"><input class="form-control input_user"placeholder="비밀번호 확인" type="password" name="retype_password"></p>
				<input class="btn btn-lg btn-block submit_user"type="submit" value="가입">
			</form>
		</div>
	</div>
</div>

