<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <p><%= flash[:alert] %></p>
    <h2 class="text-center">맛집 게시글 수정하기</h2>

    <form action="/foods/edit_complete" class="form-signin" method="post">
      <input type="hidden" name="id" value="<%= @post.id %>">
      <p class="text-center"><span class="glyphicon glyphicon-plus">분류</span>
      <select name="post_category">
        <option value="한식">한식</option>
        <option value="일식">일식</option>
        <option value="중식">중식</option>
        <option value="양식">양식</option>
      </select></p>
      <p><input class="form-control input_user"type="text" name="post_title" value="<%= @post.title %>"></p>
      <p><textarea class="form-control input_textarea"name="post_content"><%= @post.content %></textarea></p>
      <input type="submit" class="btn btn-lg btn-block submit_user"value="수정하기">
    </form>
    </div>
  </div>
</div>


<!--input_user, input_textarea, submit_user class를 추가 함-->
